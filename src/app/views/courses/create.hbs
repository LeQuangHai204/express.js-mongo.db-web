<form
    method="post"
    action="/courses/store"
    style="margin: 5%; padding: 5%; border: 1px solid black; border-radius: 2px"
>
    <div class="mb-3">
        <label for="name" class="form-label">Course Name</label>
        <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="mb-3">
        <label for="decription" class="form-label">Course description</label>
        <input
            type="text"
            class="form-control"
            id="decription"
            name="description"
        />
    </div>
    <div class="mb-3">
        <label for="video-id" class="form-label">Video Id</label>
        <input type="text" class="form-control" id="video-id" name="video_id" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>