<table class="table container mt-4 table-striped align-middle">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" colspan="2">Name</th>
            <th scope="col" colspan="3">Description</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>
                    <a href="/courses/{{this.slug}}">
                        <img
                            src="{{this.image}}"
                            style="height: 3rem; width: 4rem; object-fit: cover;"
                        />
                    </a>
                </td>
                <td>{{this.name}}</td>
                <td class="description">{{this.description}}</td>
                <td>
                    <a
                        href="/courses/{{this._id}}/edit"
                        class="btn btn-primary"
                    >
                        Edit
                    </a>
                </td>
                <td>
                    <a
                        href="/courses/{{this._id}}/delete"
                        class="btn btn-danger"
                    >
                        Delete
                    </a>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="3">
                    You have not created any courses yet
                </td>
            </tr>
        {{/each}}

